<!--index.wxml-->
<view class="gs-signup">

  <form bindsubmit="formSubmit" class="signup-form" >
    <view wx:for="{{items}}" class="signup-section">
      <view 
        class="signup-item"
        wx:if="{{item.picker}}">
        {{item.name}}
      </view>
  
      <picker 
        name='area'
        bindchange="bindPickerChange"
        class="signup-singleline" 
        wx:if="{{item.picker}}" 
        mode="{{item.mode}}" 
        value="{{item.value}}" 
        range="{{item.range}}"
        bindchange="bindPickerChange"
        data-index="{{index}}">
        {{item.range.length > 0 ? item.range[item.value] : item.value}}
      </picker>

      <textarea
      name='essay'
        class="signup-multiline signup-textarea"
        value='111'
        wx:if="{{item.textarea}}">
      </textarea>

      <button
        formType="submit"
        class="signup-btn"
        wx:if="{{item.button}}">
        {{item.name}}
      </button>
    </view>
  </form>

</view>
