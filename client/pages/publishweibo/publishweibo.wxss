.gs-signup {
  width: 100%;
  min-height: 100vh;
  margin: 0 auto;
  background-color: #fff;
  overflow: hidden;
}
/*.signup-title {
  width: 100%;
  line-height: 120rpx;
  padding-left: 30rpx;
  background-color: #1aad19;
  color: #fff;
}*/
.signup-form {
  clear: none;
  margin: 0 auto;
  width: 90%;
  padding-top: 30rpx;
  overflow: hidden;
  
}
.signup-section {
  display: flex;
  flex-direction: column;  
  line-height: 70rpx;
  margin-bottom: 0rpx;
  margin-top: 10rpx;
  overflow: hidden;
  /*background-color: #fff;*/
}
.signup-item {
  width: 20%;
  text-align: right;
  padding-right: 10rpx;
  color: #555;
}
.signup-singleline {
  margin-left: 2%;
  width: 68%;
  height: 70rpx;
  line-height: 70rpx;
  padding-left: 10rpx;
  border-radius: 5rpx;
  background-color: #fff;
  color: #999;
}
.signup-multiline {
  margin-left: 5%;
  width: 68%;
  line-height: 60rpx;
  padding-left: 10rpx;
  border-radius: 5rpx;
  background-color: #fff;
  color: #999;
}
.signup-radiogroup {
  background-color: #eee;
}
.signup-checkboxgroup {
  background-color: #eee;
}
.signup-label {
  display: block;
}
.signup-textarea {
  height: 180rpx;
  line-height: 60rpx;
  font-size: 30rpx;
}
.signup-btn {
  float: right;
  margin: 10px;
  width: 15%;
  height: 55rpx;
  padding-right: 10px;
  line-height: 50rpx;
  background-color: #1aad19;
  color: #fff;
  font-size:12px;
}
.signup-text {
  float: left;
  margin: 15px;
  
}
.button-hover {
  background-color: #eee;
}
.signup-switch {
  height: 67rpx;
}
.signup-slider {
  margin: 0;
  padding-left: 40rpx;
  background-color: #eee;
}
.pic_upload {
  float: left;
  padding-left: 10px;
  padding-top: 10rpx;
  border-width: 20px;
  width: 20%;
  height: 150rpx;
  line-height: 70rpx;
  color: #fff;
  border-radius:10rpx
}
.title-publish {
  background-color: #eee;
}
.select_area {
  justify-content: center;
}
.content-column{    
  display: flex;  
  flex-direction: column;  
}  
.content-row{    
  display: flex;  
  flex-direction: row; 
}  
.upload_text {
  font-size:25rpx;
  color:#666666;
  padding-left: 40rpx;
}